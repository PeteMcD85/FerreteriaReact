<h1>Creating New Item</h1>

<%= form_with scope: :item, url: items_path, local: true do |form| %>

<p>
  <%= form.label :name %><br>
  <%= form.text_field :name %>
</p>

<p>
  <%= form.label :category %><br>
  <%= form.text_field :category %>
</p>

<p>
  <%= form.label :brand %><br>
  <%= form.text_field :brand %>
</p>

<p>
  <%= form.label :size %><br>
  <%= form.text_field :size %>
</p>

<p>
  <%= form.label :thickness %><br>
  <%= form.text_field :thickness %>
</p>

<p>
  <%= form.label :color %><br>
  <%= form.text_field :color %>
</p>

<p>
  <%= form.label :price %><br>
  <%= form.text_field :price %>
</p>

<p>
  <%= form.submit %>
</p>

<% end %>
